html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")
        title= "Title"
    body

        div.navbar.navbar-expand-lg.navbar-dark.bg-secondary
            div.container-fluid
                ul.navbar-nav.me-auto
                    li.nav-item
                        a.nav-link(href="/myApp/home")= "Home"
                    li.nav-item
                        a.nav-link(href="/myApp/manage-users")= "Manage Users"
                    li.nav-item
                        a.nav-link(href="/myApp/pending-follow-requests")= "Follow Requests"

        div.mt-3.container
            a(href="/myApp/home")
                span
                    i.bi.bi-arrow-left
                    span= " Back"

            h1.mt-2.text-info= "Follow Requests"

            div.list-group.mt-2
                each request in requests
                    div.list-group-item
                        span= request.getUserId() + " has requested to follow you"

                        span= " "

                        form(method="post" action="/myApp/pending-follow-requests?follower_id=" + request.getPageId() + "&action=accept")
                            button.mt-2.ml-2.btn.btn-success.btn-sm(type="submit")= "Accept Request"

                        span= " "

                        form(method="post" action="/myApp/pending-follow-requests?follower_id=" + request.getPageId() + "&action=reject")
                            button.mt-2.ml-2.btn.btn-danger.btn-sm(type="submit")= "Deny Request"